{
  "expo": {
    "name": "WellSaid",
    "slug": "wellsaid",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "wellsaid",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a2b3c"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wellsaid.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a2b3c"
      },
      "package": "com.wellsaid.app",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      ["expo-router", { "root": "./app" }],
      "expo-font",
      "expo-secure-store",
      ["expo-camera", { "cameraPermission": "WellSaid needs camera access to scan medical documents." }],
      ["expo-image-picker", { "photosPermission": "WellSaid needs photo library access to upload medical documents." }]
    ]
  }
}
